<!--index.wxml-->
<view class="search_input">
  <!-- 搜索框开始 -->
  <navigator
    url="/pages/search/index"
    open-type="navigate"
  >搜索</navigator>
  <!-- 搜索框结束 -->
</view>
<!-- 轮播图开始 -->
<!-- 1.swiper标签存在默认的高度和宽度 100% * 150px -->
<!-- 2.image标签也存在默认的宽度和高度 320px *240px-->
<!-- 3.设计图和轮播图 -->
<!-- 3.1 原图的宽高 750*340  -->
<!-- 3.2 让图片的高度自适应 宽度等于100% -->
<!-- 3.3 让swiper标签的宽高 变成和图片的高一样即可 -->
<!-- 4. 图片标签  -->
<!-- mode属性 渲染模式 -->
<!-- widthFix 让图片的标签宽高和图片标签的内容的宽高等比例缩放 -->
<view class="index_swiper">
  <swiper
    autoplay
    indicator-dots
    interval="1000"
    circular
  >
    <swiper-item
      wx:for="{{swiperList}}"
      wx:key="goods_id"
    >
      <navigator>
        <image
          src="{{item.image_src}}"
          mode="widthFix"
        />
      </navigator>
    </swiper-item>
  </swiper>
</view>
<!-- 轮播图结束 -->
<!-- 导航开始 -->
<view class="index_cate">
  <navigator
    wx:for="{{categoryList}}"
    wx:key="name"
  >
    <image
      mode="widthFix"
      src="{{item.image_src}}"
    />
  </navigator>
</view>
<!-- 导航结束 -->
<!-- 楼层开始 -->
<view class="index_floor">
  <view
    class="floor_group"
    wx:for="{{floorList}}"
    wx:for-item="item1"
    wx:for-index="index1"
    wx:key="index1"
  >
    <!-- 标题 -->
    <view class="floor_title">
      {{item1.name}}
      <image
        src="{{item1.floor_title.image_src}}"
        mode="widthFix"
      />
    </view>
    <!-- 内容 -->
    <view class="floor_list">
      <navigator
        wx:for="{{item1.product_list}}"
        wx:for-index="index2"
        wx:for-item="item2"
        wx:key="index2"
      >
        <image
          src="{{item2.image_src}}"
          mode="{{index2===0?'widthFix':'scaleToFill'}}"
        />
      </navigator>
    </view>
  </view>
</view>
<!-- 楼层结束 -->
